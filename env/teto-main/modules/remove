#!/bin/sh
set -e
if [ "$(id -u)" -ne 0 ]; then
    echo "need root"
    exit 1
fi
pkg="$1"
found=0
while IFS= read -r line; do
    [ "$line" = "$pkg" ] && found=1 && break
done < /teto/pkgs/installed
if [ "$found" -eq 0 ]; then
    echo "$pkg is not installed"
    exit 1
fi
rm -f "/bin/$pkg" "/sbin/$pkg" "/usr/local/bin/$pkg" "/usr/local/sbin/$pkg"
sed -i "/^$pkg\$/d" /teto/pkgs/installed
echo "$pkg was removed"
